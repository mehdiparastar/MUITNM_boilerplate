    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://192.168.1.6:3006",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Launch server in Docker",
            "address": "192.168.1.6",
            "port": 9230,  // The debugging port specified in Dockerfile
            "localRoot": "${workspaceFolder}/server",
            "remoteRoot": "/usr/src/app",
        }
    ]
}